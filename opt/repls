#!/usr/bin/env bash

export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

what=$(whiptail --menu 'What REPL?' 23 48 12 \
"ruby193" "ruby 1.9.3" \
"py33" "python 3.3.0" \
"lua52" "lua 5.2.1" \
"clisp24" "clisp 2.4.9" \
"pypy1927" "pypy 1.9.0 (py2.7)" \
"py27" "python 2.7.3" \
"lua51" "lua 5.1.5" \
"ruby192" "ruby 1.9.2" \
"ruby20" "ruby 2.0pre" 3>&1 1>&2 2>&3)

case $what
 in
    py27)        bpython;;
    py33)        /data/.envs/py33/bin/bpython;;
    pypy1927)    /opt/pypy-1.9/bin/pypy;;
    lua52)       lua5.2 -i;;
    lua51)       lua5.1 -i;;
    ruby192)     cd /data/.rbenvs/; rbenv local 1.9.2-p320;irb;;
    ruby193)     cd /data/.rbenvs/; rbenv local 1.9.3-rc1;irb;;
    ruby20)      cd /data/.rbenvs/; rbenv local 2.0.0-preview2;irb;;
    clisp24)     clisp;;
      *)         echo You did not choose any item;;
esac


